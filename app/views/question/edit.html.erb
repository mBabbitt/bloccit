<h1>Edit Post</h1>

<div class="row">
  <div class="col-md-4">
      <p>You can update your information</p>
      
  </div>
  <div class="col-md-8">
    <%= form_for @question do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", placeholder: "Enter post title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rosw:8, class: "form-control", placeholder: "Enter post body" %>
      </div>

      <div class="form-group">
          <%= f.check_box :resolved %>
        </div>

      <div class="form-group">
        <%= f.submit "Save the Change", class: "btn btn-info" %>

      </div>

      
    <% end %>
  </div>
</div>
